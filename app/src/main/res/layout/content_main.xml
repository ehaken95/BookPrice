<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="-30dp"
        android:gravity="center"
        android:text="사진을 촬영해 주세요"
        android:textColor="#000000"
        android:textSize="20dp" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_weight="10"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/image_details"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:textSize="15dp"
                android:gravity="center"
                android:text="책이 아닌지 판별해 드립니다!카메라 버튼을 클릭하세요" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:text="조건1" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rop1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건1_1" />

                <RadioButton
                    android:id="@+id/rop1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건1_2" />

                <RadioButton
                    android:id="@+id/rop1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건1_3" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:text="조건2" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rop2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건2_1" />

                <RadioButton
                    android:id="@+id/rop2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건2_2" />

                <RadioButton
                    android:id="@+id/rop2_3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건2_3" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="10"
                android:text="조건3" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="10"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rop3_1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건3_1" />

                <RadioButton
                    android:id="@+id/rop3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건3_2" />

                <RadioButton
                    android:id="@+id/rop3_3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="조건3_3" />
            </RadioGroup>

            <TextView
                android:id="@+id/labeldetection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="77dp"
                android:layout_weight="10"
                android:text="label" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>